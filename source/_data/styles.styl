// 首页只显示文章标题，隐藏内容
.posts-expand .post-body {
  display: none;
}

.posts-expand .post-button {
  display: none;
}

// 首页文章标题样式优化
.posts-expand .post-title {
  font-size: 1.3em;
  margin-bottom: 5px;
}

.posts-expand .post-title-link {
  border-bottom: none;
}

// 文章 meta 信息简化
.posts-expand .post-meta {
  margin-bottom: 10px;
  font-size: 0.85em;
}

// 文章块间距调整
.posts-expand .post-block {
  margin-bottom: 20px;
  padding-bottom: 20px;
  border-bottom: 1px dashed #eee;
}

// 首页邮箱显示样式
.site-subtitle {
  font-size: 0.9em;
  color: #666;
}

